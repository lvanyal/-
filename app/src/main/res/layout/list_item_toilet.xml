<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/toilet_name"
            style="@style/TextAppearance.AppCompat.SearchResult.Title"
            android:layout_width="@dimen/toilet_list_item_name_width"
            android:layout_gravity="left|center_vertical"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Some toilet near you" />

        <TextView
            android:id="@+id/work_time"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/toilet_list_price_margit_left"
            tools:text="Full day" />

        <TextView
            android:id="@+id/distance"
            style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
            android:layout_gravity="right|center_vertical"
            android:layout_rowSpan="2"
            tools:text="250m" />

        <TextView
            android:id="@+id/address"
            style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
            android:layout_width="@dimen/toilet_list_item_name_width"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Ploshcha Rynok 34/3" />

        <TextView
            android:id="@+id/price"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/toilet_list_price_margit_left"
            android:layout_marginTop="4dp"
            tools:text="5uah" />


    </GridLayout>

</android.support.v7.widget.CardView>